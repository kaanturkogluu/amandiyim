# Uygulama Ayarları
APP_NAME=Amandiyim
APP_URL=http://localhost:3000
APP_ENV=local
APP_DEBUG=true
APP_KEY=base64:your-secret-key-here

# Veritabanı Ayarları
DB_HOST=localhost
DB_NAME=amandiyim
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Redis Ayarları
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_SCHEME=tcp

# Mail Ayarları
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# Güvenlik Ayarları
SESSION_LIFETIME=7200
REMEMBER_TOKEN_LIFETIME=604800
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=900
CSRF_TOKEN_LIFETIME=7200
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true

# Dosya Yükleme Ayarları
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

MAX_UPLOAD_FILES=5

# Cache Ayarları
CACHE_ENABLED=true
CACHE_LIFETIME=3600
CACHE_PREFIX=amandiyim_
CACHE_DRIVER=redis

# Performans Ayarları
MAX_CONNECTIONS=10
CONNECTION_TIMEOUT=5
QUERY_TIMEOUT=10
MAX_EXECUTION_TIME=30
MEMORY_LIMIT=256M
MAX_INPUT_VARS=3000
POST_MAX_SIZE=8M
UPLOAD_MAX_FILESIZE=5M

# Log Ayarları
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_MAX_FILES=30
LOG_MAX_SIZE=5242880

# API Ayarları
API_RATE_LIMIT=60
API_RATE_WINDOW=60
API_TOKEN_LIFETIME=3600
API_REFRESH_TOKEN_LIFETIME=604800

# Queue Ayarları
QUEUE_CONNECTION=redis
QUEUE_TIMEOUT=60
QUEUE_RETRY_AFTER=90
MAX_QUEUE_ATTEMPTS=3 